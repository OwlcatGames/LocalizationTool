<Window x:Class="LocalizationTracker.Windows.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalizationTracker.Windows"
        xmlns:components="clr-namespace:LocalizationTracker.Components"
        mc:Ignorable="d"
        x:Name="Window"
        Title="Domain authentification" Height="158" Width="220" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <StackPanel Margin="10,4,10,7">
        <Label Content="Enter domain login:" />
        <TextBox x:Name="UsernameTextBox" Width="200" />

        <Label Content="Enter domain password:" Width="280" />
        <PasswordBox x:Name="PasswordBox" Width="200" />
        <Button Content="Submit" Click="OnSubmitClick" Margin="0,20,-95,0" Width="104"/>
    </StackPanel>
</Window>